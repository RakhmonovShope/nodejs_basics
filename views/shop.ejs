<%- include('includes/head.ejs')%>
</head>
<body>
<%- include('includes/navigation.ejs')%>
    <main>
        <%if(prods.length > 0) { %>
        <div class="grid">
        <%for (const product of prods) { %>

            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__tile"><%= product.title%></h1>
                </header>
                <div class="card__image">
                    <img src="https://media.istockphoto.com/id/618060058/photo/dzhuma-mosque-in-tashkent-uzbekistan.jpg?s=612x612&w=0&k=20&c=5G_H4dlQv-NJRAEQkm3MrNHa3771t-Jbnh8ngKXXF_Q=" alt="Hello" />
                </div>
                <div class="card__content">
                    <h2 class="product__price">$19.99</h2>
                    <p class="product__description">
                      A very interesting book about so many
                    </p>
                </div>
                <div class="card__actions">
                    <button class="btn">Add to Cart</button>
                </div>
            </article>
            <%}%>
        </div>
        <%}else { %>
            <h1>Product is not available</h1>
        <%}%>
    </main>
<%- include('includes/end.ejs')%>
