extends layouts/main-layout.pug

block styles
    link(rel='stylesheet', href='/css/product.css')

block content
    if prods.length > 0
        main
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__tile #{product.title}
                        .card__image
                            img(src="https://cdn.pixabay.com/photo/2023/04/30/18/26/flower-7961220__480.jpg" alt="Hello")
                        .card__content
                            h2.product__price 19.99
                            p.product__description A very interesting book about so many
                        .card__actions
                            button.btnAdd to Cart
    else
        h1 No items available